# Quick extraction function (popular)
extract () {
  local f="$1"
  if [[ -f "$f" ]]; then
    case "$f" in
      *.tar.bz2)   tar xjf "$f"   ;;
      *.tar.gz)    tar xzf "$f"   ;;
      *.bz2)       bunzip2 "$f"   ;;
      *.rar)       unrar x "$f"   ;;
      *.gz)        gunzip "$f"    ;;
      *.tar)       tar xf "$f"    ;;
      *.tbz2)      tar xjf "$f"   ;;
      *.tgz)       tar xzf "$f"   ;;
      *.zip)       unzip "$f"     ;;
      *.7z)        7z x "$f"      ;;
      *.Z)         uncompress "$f";;
      *)           echo "'$f' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$f' is not a valid file"
  fi
}

